@{
    ViewBag.Title = "Đăng Nhập";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@Url.Action().Split('/').Last()</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="@Url.Content("~/manifest.json")">

    <!-- Apple -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/iconShopFhish.png">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Shop Fish">

    <!-- Android -->
    <link rel="manifest" href="~/manifest.json">
    <meta name="theme-color" content="#0077b6">

    <!-- Windows -->
    <meta name="msapplication-TileColor" content="#0077b6">
    <meta name="msapplication-TileImage" content="~/images/iconShopFhish.png">

    <!-- Add icon library -->
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link href="~/css/theme-default.css" rel="stylesheet" class="template-customizer-theme-css" />
    <script src="../Scripts/jquery-3.4.1.min.js"></script>
    <script src="../Scripts/popper.min.js"></script>
    <script src="../Scripts/sweetalert2.js"></script>

</head>
<body>
    <style>
        body {
            /*background: url(../images/hinh-nen-cong-ty-matsuya-rnd.jpg) no-repeat center center fixed !important;*/
            background: url('@Url.Content("~/image/backback.jpg")') no-repeat center center fixed !important;
            height: 100% !important;
            background-size: cover !important;
        }

        .form-control {
            border-radius: 20px;
            border-color: white
        }
        .fa-chevron-left:before {
            position: absolute;
            top: 11px;
            right: 9px;
        }
    </style>
    
    <div class="container p-4 shadow" style="max-width: 400px; border-radius: 20px; margin-top: 50px; background-color: whitesmoke">
        <img class="mx-auto d-block" style="width:60%" src="~/images/gym_10484999.png" />
        <h3 style="text-align: center">Welcome to Shop Gym</h3>
        <br />
        <form method="post" action="@Url.Action("Login", "Home")" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            <div class="form-group" style="margin-left: 36px;">
                <input type="text" class="form-control" id="returnUrl" name="returnUrl" readonly style="display: none;">
                <input type="text" class="form-control" id="user_number" placeholder="Nhập tài khoản" name="username" autofocus>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <div class="form-group" style="margin-left: 36px;">
                <input type="password" class="form-control" id="user_password" placeholder="Nhập mật khẩu" name="password" required>
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
            <input type="password" class="form-control" id="token" name="token" hidden>
            <br />
            <button type="submit" class="btn btn-primary btn-block" style="border-radius: 20px;"> Đăng nhập</button>
        </form>
    </div>
    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
        // Disable form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Get the forms we want to add validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        else {
                            document.getElementById("overlay").style.display = "block";*
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>
